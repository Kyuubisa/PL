<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/authentication_sing_up"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <ImageView
      android:id="@+id/icon_authentication"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:background="@drawable/Fox_icon"
      android:layout_width="100dp"
      android:layout_height="100dp" />
  <android.support.design.widget.TextInputLayout
      android:layout_below="@id/icon_authentication"
      android:id="@+id/singup_input_email"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <EditText
        android:id="@+id/singup_email"
        android:hint="E-mail"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout
      android:layout_below="@id/singup_input_email"
      android:id="@+id/singup_input_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <EditText
        android:id="@+id/singup_password"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
  </android.support.design.widget.TextInputLayout>
  <Button
      android:layout_below="@id/singup_input_password"
      android:id="@+id/singup_btn_register"
      android:text="Зарегистрироваться"
      android:background="#263238"
      style="@style/Widget.AppCompat.Button.Colored"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  <TextView
      android:layout_below="@id/singup_btn_register"
      android:id="@+id/singup_btn_forgot_password"
      android:layout_centerHorizontal="true"
      android:clickable="true"
      android:textStyle="bold"
      android:text="Забыли пароль?"
      android:textColor="@color/colorPrimaryDark"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  <LinearLayout
      android:layout_below="@id/singup_btn_forgot_password"
      android:id="@+id/singup_layout_or"
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#C4C8C9"
        android:layout_margin="5dp" />
    <TextView
        android:padding="5dp"
        android:text="ИЛИ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#C4C8C9"
        android:layout_margin="5dp" />
  </LinearLayout>
  <TextView
      android:layout_below="@id/singup_layout_or"
      android:id="@+id/singup_btn_login"
      android:layout_centerHorizontal="true"
      android:clickable="true"
      android:textStyle="bold"
      android:text="Есть аккаунт? Войти"
      android:textColor="@color/colorPrimaryDark"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
</RelativeLayout>
